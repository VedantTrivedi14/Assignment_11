<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/audio_icon"
        android:paddingStart="@dimen/horizontal_padding_icon"
        android:paddingTop="@dimen/vertical_padding_icon"
        android:paddingEnd="@dimen/horizontal_padding_icon"
        android:paddingBottom="@dimen/vertical_padding_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_audiotrack_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAudioName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:padding="@dimen/padding"
        android:textSize="@dimen/name_textSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"/>
</androidx.constraintlayout.widget.ConstraintLayout>
